<tr>
  <td>
    <%= review.user.first_name %>
    <%= review.user.last_name %>
  </td>
  <td>
    <%= review.description %>
  </td>
  <td>
    <%= review.rating %>
  </td>
  <td>
    <%= review.created_at.strftime('%F') %>
  </td>
  <td>
    <% if current_user.id == review.user_id %>
      <%= link_to fa_icon('trash'), product_review_path(product_id: review.product_id, review_id: review.id), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </td>
</tr>
